# Rename to ".env" and fill in your own MQTT details.

# Mail Configuration for SMS/email fallback when MQTT client is offline
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD="your_app_specific_password"
MAIL_FROM=your_email@example.com
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# MQTT Configuration
MQTT_BROKER=your.mqtt.broker.address
MQTT_PORT=8883
MQTT_CA_CERT=./certs/ca.crt
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password

# Database for registered clients
DB_PATH=notification.db
SQLALCHEMY_DATABASE_URL=sqlite:///./notification.db
